---
const { frontmatter } = Astro.props;
import Layout from "./Layout.astro";
import Section from "../components/Section.astro";
import Footer from "../components/Footer.astro";
import Grids from "../components/Grids.astro";
const allPosts = await Astro.glob("../pages/projects/*.md");
const image = await Astro.glob("../../public/img/projects/**/*.png")

---

<Layout page.Title={frontmatter.title} title= `${frontmatter.title} –– Fernando Catalán`>
    <Section class="my-28">
        <Grids class="gap-40">
            <div class="flex flex-col gap-4">
                {image.map((img) =>
                    <img src={img.url}>
                )}
            </div>
            <div>
                <span class="">{frontmatter.year}</span>
                <h1 class="my-3">{frontmatter.title}</h1>
                <slot />
            </div>
        </Grids>
    </Section>
</Layout>

<style>
    h1 {
        font-size: 1.75rem;
        font-weight: 500;
    }
</style>
